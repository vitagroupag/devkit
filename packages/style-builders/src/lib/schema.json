{
  "$schema": "http://json-schema.org/schema",
  "additionalProperties": true,
  "type": "object",
  "properties": {
    "style": {
      "type": "string",
      "enum": [ "sass" ],
      "description": "The preprocessor to use for style files"
    },
    "stylePreprocessorOptions": {
      "type": "object",
      "description": "Options to pass the the used style preprocessor",
      "properties": {
        "includePaths": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "copy": {
      "type": "array",
      "items": {
        "anyOf": [
          { "type": "string" },
          {
            "type": "object",
            "properties": {
              "from": {
                "type": "string",
                "optional": false
              },
              "to": { "type": "string" },
              "pattern": { "type": "string" },
              "exclude": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        ]
      }
    },
    "outDir": {
      "type": "string",
      "description": "The output directory path to write the output files to",
      "optional": false
    },
    "files": {
      "type": "array",
      "description": "An array of file paths relative to the rootDir used as input",
      "optional": true,
      "items": {
        "type": "string"
      }
    },
    "include": {
      "type": "array",
      "description": "An array of file patterns to be include in the compilation",
      "optional": true,
      "items": {
        "type": "string"
      }
    },
    "exclude": {
      "type": "array",
      "description": "An array of file patterns to be excluded from the compilation",
      "optional": true,
      "items": {
        "type": "string"
      }
    }
  }
}
